{
    "todo_file": "todo.md",
    "incidents_file": "[todo · incidents]/ai.incidents.md",
    "standards_file": "[standards .md]/index.md",
    "backups_enabled": true,
    "backup_suffix": ".bak",
    "max_backups": 5,
    "triggers": {
        "task_triggers": {
            "выполнить анализ": 1,
            "улучшить интерфейс": 1,
            "оптимизировать производительность": 1,
            "исправить ошибку": 1,
            "обновить стандарт": 1,
            "создать отчет": 1
        },
        "incident_triggers": {
            "инцидент производительности": 1,
            "инцидент безопасности": 1,
            "критический инцидент": 1,
            "инцидент кеша": 1,
            "инцидент интерфейса": 1,
            "инцидент синхронизации": 1
        },
        "standard_triggers": {
            "обновить процесс": 1,
            "изменить методологию": 1,
            "ввести новое правило": 1,
            "улучшить качество": 1,
            "обеспечить соответствие": 1
        }
    },
    "file_patterns": {
        "task_files": [
            "task_*.md",
            "*_task.md",
            "todo_*.md"
        ],
        "incident_files": [
            "incident_*.md",
            "*_incident.md",
            "*_issue.md"
        ],
        "standard_files": [
            "standard_*.md",
            "*_standard.md"
        ]
    },
    "paths": {
        "task_directories": [
            "[todo · incidents]",
            "projects/tasks"
        ],
        "incident_directories": [
            "[todo · incidents]",
            "projects/incidents"
        ],
        "standard_directories": [
            "[standards .md]"
        ]
    },
    "logging": {
        "level": "INFO",
        "file": "advising_platform.log",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "cache": {
        "enabled": true,
        "state_file": ".cache_state.json",
        "detailed_state_file": ".cache_detailed_state.pickle",
        "critical_instructions_file": ".critical_instructions_cache.json",
        "max_backups": 3
    }
}