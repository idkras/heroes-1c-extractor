##########################################
# Основные настройки Advising Platform
##########################################

# Режим отладки (установите в False для продакшена)
DEBUG=True

# Секретный ключ для Flask (обязательно изменить в продакшене!)
SECRET_KEY=your-secret-key-here

# Порт для запуска API-сервера
API_PORT=5000

# Порт для запуска веб-сервера
WEB_PORT=5001

##########################################
# Настройки внешнего API
##########################################

# Токены для внешнего API
ADVISING_API_SLACK_TOKEN=your-slack-api-token
ADVISING_API_TELEGRAM_TOKEN=your-telegram-api-token

# Секретные ключи для верификации запросов
SLACK_SIGNING_SECRET=your-slack-signing-secret
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

##########################################
# Настройки логирования
##########################################

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/advising_platform.log

##########################################
# Настройки базы данных
##########################################

# URL подключения к PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/advising_platform

##########################################
# Настройки интеграций
##########################################

# Google API для экспорта в Google Docs
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Настройки для туннеля (доступ извне)
TUNNEL_SUBDOMAIN=advising-platform