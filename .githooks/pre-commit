#!/bin/bash

# Pre-commit hook –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–≥–æ –∏—Å–ø—Ä–∞–≤–ª–µ–Ω–∏—è –æ—à–∏–±–æ–∫ –ª–∏–Ω—Ç–µ—Ä–∞
# JTBD: –ö–∞–∫ —Å–∏—Å—Ç–µ–º–∞ pre-commit, —è —Ö–æ—á—É –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∏—Å–ø—Ä–∞–≤–ª—è—Ç—å –æ—à–∏–±–∫–∏ –ª–∏–Ω—Ç–µ—Ä–∞
# –ø–µ—Ä–µ–¥ –∫–æ–º–º–∏—Ç–æ–º, —á—Ç–æ–±—ã –∫–æ–¥ –≤—Å–µ–≥–¥–∞ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–æ–≤–∞–ª —Å—Ç–∞–Ω–¥–∞—Ä—Ç–∞–º.

echo "üîß Pre-commit: –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –æ—à–∏–±–æ–∫ –ª–∏–Ω—Ç–µ—Ä–∞..."

# –ü–æ–ª—É—á–∞–µ–º —Å–ø–∏—Å–æ–∫ –∏–∑–º–µ–Ω–µ–Ω–Ω—ã—Ö Python —Ñ–∞–π–ª–æ–≤
python_files=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$')

if [ -z "$python_files" ]; then
    echo "‚úÖ –ù–µ—Ç –∏–∑–º–µ–Ω–µ–Ω–Ω—ã—Ö Python —Ñ–∞–π–ª–æ–≤"
    exit 0
fi

echo "üìÅ –ù–∞–π–¥–µ–Ω–æ –∏–∑–º–µ–Ω–µ–Ω–Ω—ã—Ö Python —Ñ–∞–π–ª–æ–≤: $(echo "$python_files" | wc -l)"

# –ò—Å–ø—Ä–∞–≤–ª—è–µ–º –æ—à–∏–±–∫–∏ –ª–∏–Ω—Ç–µ—Ä–∞ –¥–ª—è –∫–∞–∂–¥–æ–≥–æ —Ñ–∞–π–ª–∞
for file in $python_files; do
    if [ -f "$file" ]; then
        echo "üîß –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ $file..."

        # –ó–∞–ø—É—Å–∫–∞–µ–º ruff check —Å –∞–≤—Ç–æ–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ–º
        if command -v ruff >/dev/null 2>&1; then
            ruff check --fix "$file"
            ruff format "$file"

            # –î–æ–±–∞–≤–ª—è–µ–º –∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã–π —Ñ–∞–π–ª –≤ –∏–Ω–¥–µ–∫—Å
            git add "$file"
        else
            echo "‚ö†Ô∏è Ruff –Ω–µ –Ω–∞–π–¥–µ–Ω. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ: pip install ruff"
        fi
    fi
done

echo "‚úÖ Pre-commit: –û—à–∏–±–∫–∏ –ª–∏–Ω—Ç–µ—Ä–∞ –∏—Å–ø—Ä–∞–≤–ª–µ–Ω—ã"
exit 0
