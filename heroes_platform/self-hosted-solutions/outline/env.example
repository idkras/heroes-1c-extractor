# Outline Environment Variables
# Copy this file to .env and fill in your values

# App Configuration
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
UTILS_SECRET=your-utils-secret-here-minimum-32-characters
URL=http://localhost:3000

# Database (already configured in docker-compose.yml)
# DATABASE_URL=postgresql://outline:outline@postgres:5432/outline

# Redis (already configured in docker-compose.yml)
# REDIS_URL=redis://redis:6379

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Slack OAuth (optional)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Additional Configuration
NODE_ENV=production
FILE_STORAGE=local
FILE_STORAGE_LOCAL_ROOT_DIR=/var/lib/outline/data
